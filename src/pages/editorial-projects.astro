---
// src/pages/editorial-projects.astro
import Layout from '../layouts/Layout.astro';

const projects = [
  {
    video: 'https://www.youtube.com/embed/lNtBiZaLA0k',
    title: 'CICERO: The first AI to play Diplomacy at a human level',
    body: "Meta AI presents CICERO — the first AI to achieve human-level performance in Diplomacy, a strategy game which requires building trust, negotiating and cooperating with multiple players. New techniques in strategic reasoning and natural language processing give CICERO the ability to understand players’ motivations and perspectives, make complex plans, reach agreements, form alliances and even win! When playing in live games, CICERO achieved more than 2X the average score of its human opponents."
  },
  {
    video: 'https://www.youtube.com/embed/B3vlnO9FMxc',
    title: "Reimagining Meta's Infrastructure for the AI Age",
    body: "Meta is executing on an ambitious plan to build the next generation of its infrastructure backbone – specifically for AI. This includes our first custom chip for running AI models, a new AI-optimized data center design, and the second-phase buildout of our 16,000 GPU supercomputer for AI research."
  },
  {
    video: 'https://www.youtube.com/embed/1nHSlrxyQho',
    title: 'Teaching AI to translate 100s of spoken and written languages in real time',
    body: "Today, billions of people are unable to easily access most of the information on the internet or connect with most of the online world in their native languages. Eliminating these language barriers would be profound, making it possible for people to access information online in their native or preferred languages.   Meta AI is announcing a long-term effort to build language and MT tools that will include most of the world’s languages. That means building AI models that can learn from languages with fewer examples to train from and designing new ways to translate speech in one language to another in real time."
  }
];
---

<Layout title="Editorial Projects">
	<style>
		body {
			background-color: #000;
			color: #fff;
			font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
			margin: 0;
		}

		.page-header {
			padding: 1rem 4rem;
			background-color: rgba(0, 0, 0, 0.4);
			text-align: left;
		}

		.page-header a {
			color: white;
			text-decoration: none;
			font-size: 1rem;
			transition: opacity 0.3s ease;
		}

		.page-header a:hover {
			opacity: 0.7;
		}

		main {
			max-width: 90ch;
			margin: 0 auto;
			padding: 4rem 2rem;
		}

		.page-title {
			font-size: 3rem;
			margin-bottom: 4rem;
			text-align: center;
			border-bottom: 1px solid rgba(255, 255, 255, 0.2);
			padding-bottom: 1rem;
		}

		.projects-list {
			display: grid;
			gap: 6rem;
		}

		.video-container {
			position: relative;
			padding-bottom: 56.25%; /* 16:9 aspect ratio */
			height: 0;
			overflow: hidden;
			margin-bottom: 1.5rem;
			border-radius: 8px;
			background-color: #111;
		}

		.video-container iframe {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			border: 0;
		}

		.text-content h2 {
			font-size: 1.75rem;
			font-weight: 500;
			margin-top: 0;
			margin-bottom: 1rem;
		}

		.text-content p {
			font-size: 1rem;
			line-height: 1.7;
			font-weight: 300;
			opacity: 0.9;
			margin: 0;
		}
	</style>

	<header class="page-header">
		<a href="/">&larr; Back to Home</a>
	</header>

	<main>
		<h1 class="page-title">Editorial Projects</h1>
		<div class="projects-list">
			{projects.map(project => (
				<article class="project-item">
					<div class="video-container">
						<iframe
							src={project.video}
							title={project.title}
							frameborder="0"
							allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
							allowfullscreen
						></iframe>
					</div>
					<div class="text-content">
						<h2>{project.title}</h2>
						<p>{project.body}</p>
					</div>
				</article>
			))}
		</div>
	</main>
</Layout>
