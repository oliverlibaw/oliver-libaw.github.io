---

<Layout title="Editorial Projects" showPopups={false}>
	<style>
		body {
			background-color: #000;
			color: #fff;
			font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
			margin: 0;
		}

		main {
			max-width: 90ch;
			margin: 0 auto;
			padding: 4rem 2rem;
			padding-top: 12rem; /* Account for fixed header */
		}

		.page-title {
			font-size: 3rem;
			margin-bottom: 4rem;
			text-align: center;
			border-bottom: 1px solid rgba(255, 255, 255, 0.2);
			padding-bottom: 1rem;
		}

		.section-title {
			font-size: 2.5rem;
			margin-top: 6rem;
			margin-bottom: 3rem;
			text-align: center;
			border-bottom: 1px solid rgba(255, 255, 255, 0.2);
			padding-bottom: 1rem;
		}

		.projects-list {
			display: grid;
			gap: 6rem;
		}

		.video-container {
			position: relative;
			padding-bottom: 56.25%; /* 16:9 aspect ratio */
			height: 0;
			overflow: hidden;
			margin-bottom: 1.5rem;
			border-radius: 8px;
			background-color: #111;
		}

		.video-container iframe {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			border: 0;
		}

		.text-content h2 {
			font-size: 1.75rem;
			font-weight: 500;
			margin-top: 0;
			margin-bottom: 1rem;
		}

		.text-content p {
			font-size: 1rem;
			line-height: 1.7;
			font-weight: 300;
			opacity: 0.9;
			margin: 0;
		}

		.blog-posts-grid {
			display: grid;
			grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
			gap: 2.5rem;
		}

		.blog-post-item a {
			display: flex;
			flex-direction: column;
			text-decoration: none;
			color: white;
			background-color: #1a1a1a;
			border-radius: 8px;
			overflow: hidden;
			transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
			height: 100%;
			border: 1px solid rgba(255, 255, 255, 0.1);
		}

		.blog-post-item a:hover {
			transform: translateY(-5px);
			box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
		}

		.blog-post-image {
			width: 100%;
			height: 180px;
			object-fit: cover;
			border-bottom: 1px solid rgba(255, 255, 255, 0.1);
		}

		.blog-post-text {
			padding: 1.25rem;
			flex-grow: 1;
			display: flex;
			align-items: center;
		}

		.blog-post-text h3 {
			font-size: 1.1rem;
			font-weight: 500;
			margin: 0;
			line-height: 1.5;
		}

		@media (max-width: 768px) {
			main {
				padding: 2rem 1rem;
				padding-top: 8rem; /* Adjust for potentially taller header on mobile */
			}
		}
	</style>

	<Header />

	<main>
		<h1 class="page-title">Editorial Projects</h1>
		<div class="projects-list">
			{projects.map(project => (
				<article class="project-item">
					<div class="video-container">
						<iframe
							src={project.video}
							title={project.title}
							frameborder="0"
							allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
							allowfullscreen
						></iframe>
					</div>
					<div class="text-content">
						<h2>{project.title}</h2>
						<p>{project.body}</p>
					</div>
				</article>
			))}
		</div>

		<h2 class="section-title">Blog Posts & Articles</h2>
		<div class="blog-posts-grid">
			{blogPosts.map(post => (
				<article class="blog-post-item">
					<a href={post.url} target="_blank" rel="noopener noreferrer">
						<img
							src={post.image}
							alt={`Hero image for ${post.title}`}
							class="blog-post-image"
						/>
						<div class="blog-post-text"><h3>{post.title}</h3></div>
					</a>
				</article>
			))}
		</div>
	</main>
</Layout>
