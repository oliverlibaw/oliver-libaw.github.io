<div id="follow-social-popup" class="popup-overlay">
  <div class="popup-content">
    <button id="follow-social-close" class="close-button">&times;</button>
    <img src="/images/follow_social.jpg" alt="Follow on social media" />
  </div>
</div>

<style>
  .popup-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.8);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1007;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
  }

  .popup-overlay.visible {
    opacity: 1;
    visibility: visible;
  }

  .popup-content {
    background: #fff;
    padding: 1rem;
    border-radius: 10px;
    text-align: center;
    position: relative;
    box-shadow: 0 5px 20px rgba(0,0,0,0.4);
  }

  .popup-content img {
    max-width: 400px;
    height: auto;
    display: block;
    border-radius: 10px;
  }

  .close-button {
    position: absolute;
    top: 5px;
    right: 10px;
    font-size: 2rem;
    color: #aaa;
    background: none;
    border: none;
    cursor: pointer;
    z-index: 1;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const popup = document.getElementById('follow-social-popup');
    const closeButton = document.getElementById('follow-social-close');

    if (!popup || !closeButton) return;

    const showPopup = () => popup.classList.add('visible');
    const closePopup = () => {
      popup.classList.remove('visible');
      document.dispatchEvent(new CustomEvent('follow-social-closed'));
    };

    document.addEventListener('show-follow-social', showPopup);
    closeButton.addEventListener('click', closePopup);
  });
</script>