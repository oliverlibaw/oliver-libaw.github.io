<div id="spin-wheel-popup" class="popup-overlay">
  <div class="popup-content">
    <video 
      src="/images/spinner.mp4" 
      autoplay muted playsinline class="spinner-video" 
      title="Spinning wheel animation"></video>
  </div>
</div>

<style>
  .popup-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1010;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
  }

  .popup-overlay.visible {
    opacity: 1;
    visibility: visible;
  }

  .popup-content {
    background: transparent;
    box-shadow: none;
    position: relative;
    max-width: 400px;
    width: 90%;
  }

  @media (max-width: 768px) {
    .popup-content {
      max-width: 300px;
    }
  }

  .spinner-video {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 8px; /* Optional: adds slightly rounded corners */
  }
</style>