<div id="banner-popup" class="banner-overlay">
  <div class="banner-content">
    <div class="banner-text">
      <p class="heading">THIS IS YOUR LAST COMPLIMENTARY JOKE</p>
      <p class="subheading">Subscribe now to unlock unlimited access and stay ahead of the curve.</p>
    </div>
    <button class="subscribe-button">SUBSCRIBE & SAVE 17%</button>
    <button id="banner-close" class="close-button">&times;</button>
  </div>
</div>

<style>
  .banner-overlay {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    z-index: 1009;
    background-color: #0ABAB5; /* Tiffany Blue */
    color: #000;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    transform: translateY(100%);
    transition: transform 0.4s ease-in-out;
    box-shadow: 0 -5px 15px rgba(0,0,0,0.1);
  }

  .banner-overlay.visible {
    transform: translateY(0);
  }

  .banner-content {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 2rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    gap: 2rem;
  }

  .banner-text {
    text-align: left;
    flex-grow: 1;
  }

  .banner-text .heading {
    font-weight: bold;
    font-size: 1.1rem;
    margin: 0 0 0.25rem 0;
  }

  .banner-text .subheading {
    margin: 0;
    font-size: 0.9rem;
  }

  .subscribe-button {
    background-color: #000;
    color: #fff;
    border: none;
    padding: 0.75rem 1.5rem;
    font-weight: bold;
    cursor: pointer;
    border-radius: 5px;
    white-space: nowrap;
    transition: background-color 0.2s;
  }

  .subscribe-button:hover {
    background-color: #333;
  }

  .close-button {
    background: none;
    border: none;
    color: #000;
    font-size: 1.5rem;
    cursor: pointer;
    padding: 0.5rem;
  }

  @media (max-width: 768px) {
    .banner-content {
      flex-direction: column;
      align-items: stretch;
      text-align: center;
      gap: 1.5rem;
      padding: 3rem 1rem;
    }
    .banner-text {
      text-align: center;
    }
    .close-button {
      position: absolute;
      top: 0;
      right: 0;
    }
  }
</style>