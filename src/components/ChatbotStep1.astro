<div id="chatbot-step1-popup" class="chatbot-container">
  <div class="chatbot-content">
    <button class="close-button">&times;</button>
    <p class="chatbot-message">Hi! How's your day going?</p>
    <div class="chatbot-options">
      <button class="chatbot-button option-button">So glad you asked.</button>
      <button class="chatbot-button option-button">Sit back and let me tell you in great detail.</button>
    </div>
  </div>
</div>

<style>
  /* Styles are copied from the original AnnoyingChatbot.astro */
  .chatbot-container {
    position: fixed;
    bottom: 2rem;
    left: 2rem;
    z-index: 1009;
    max-width: 350px;
    width: calc(100% - 4rem);
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    opacity: 0;
    transform: translateY(20px);
    pointer-events: none;
    transition: opacity 0.5s ease, transform 0.5s ease;
  }

  .chatbot-container.visible {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
  }

  .chatbot-content {
    background-color: #f1f1f1;
    color: #111;
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: 0 5px 20px rgba(0,0,0,0.2);
    position: relative;
  }

  .close-button {
    position: absolute;
    top: 8px;
    right: 12px;
    font-size: 1.5rem;
    color: #aaa;
    background: none;
    border: none;
    cursor: pointer;
    line-height: 1;
  }

  .close-button:hover {
    color: #333;
  }

  .chatbot-message {
    margin: 0 0 1.5rem 0;
    font-size: 1rem;
    line-height: 1.5;
  }

  .chatbot-options {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .chatbot-button {
    background-color: #fff;
    border: 1px solid #ddd;
    color: #007bff;
    padding: 0.75rem 1rem;
    border-radius: 20px;
    cursor: pointer;
    text-align: left;
    font-size: 0.9rem;
    transition: background-color 0.2s, border-color 0.2s;
    width: 100%;
  }

  .chatbot-button:hover {
    background-color: #e9f5ff;
    border-color: #007bff;
  }
</style>