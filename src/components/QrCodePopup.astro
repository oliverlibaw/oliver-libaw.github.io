<div id="qr-code-popup" class="popup-overlay">
  <div class="popup-content">
    <button id="qr-code-close" class="close-button">&times;</button>
    <h2>It's QR Code Time.</h2>
    <img src="/images/sample_qr_code.png" alt="Sample QR Code" />
  </div>
</div>

<style>
  .popup-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.8);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1010;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
  }

  .popup-overlay.visible {
    opacity: 1;
    visibility: visible;
  }

  .popup-content {
    background: #fff;
    padding: 2rem;
    border-radius: 10px;
    text-align: center;
    position: relative;
    box-shadow: 0 5px 20px rgba(0,0,0,0.4);
  }

  .popup-content h2 {
    margin-top: 0;
    margin-bottom: 1.5rem;
    color: #333;
  }

  .popup-content img {
    max-width: 250px;
    height: auto;
  }

  .close-button {
    position: absolute;
    top: 10px;
    right: 15px;
    font-size: 2rem;
    color: #aaa;
    background: none;
    border: none;
    cursor: pointer;
  }
</style>