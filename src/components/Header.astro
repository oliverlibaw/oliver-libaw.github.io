<style>
    .top-bar {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 4rem;
        transition: background-color 0.3s ease;
        background-color: transparent;
        z-index: 10;
        box-sizing: border-box;
    }

    .top-bar.scrolled {
        background-color: rgba(0, 0, 0, 0.4);
    }

    .top-left a {
        text-decoration: none;
        color: inherit;
    }

    .top-bar h1 {
        font-size: clamp(2.5rem, 8vw, 4rem);
        margin: 0;
        font-weight: 500;
    }

    .subtitle {
        font-size: clamp(1.2rem, 4vw, 1.5rem);
        margin: 0.5rem 0 1.5rem;
        font-weight: 300;
    }

    .top-right {
        display: flex;
        gap: 2rem;
        align-items: center;
    }

    .top-right a {
        color: white;
        text-decoration: none;
        font-size: clamp(1rem, 3vw, 1.2rem);
        transition: opacity 0.3s ease;
        white-space: nowrap;
    }

    .top-right a:hover {
        opacity: 0.7;
    }

    @media (max-width: 768px) {
        .top-bar {
            padding: 1rem 1.5rem;
            flex-direction: column;
            gap: 1.5rem;
        }

        .top-left {
            text-align: center;
        }

        .top-right {
            flex-wrap: wrap;
            justify-content: center;
            gap: 0.75rem 1.5rem;
        }
    }
</style>

<header class="top-bar">
    <div class="top-left">
        <a href="/">
            <h1>Oliver Libaw</h1>
            <p class="subtitle">doer of several things</p>
        </a>
    </div>
    <nav class="top-right">
        <a href="/editorial-projects">Editorial Projects</a>
        <a href="/ai-art-projects">AI Art</a>
        <a
            href="https://github.com/oliverlibaw"
            target="_blank"
            rel="noopener noreferrer">GitHub</a
        >
        <a
            href="https://www.linkedin.com/in/oliverlibaw/"
            target="_blank"
            rel="noopener noreferrer">LinkedIn</a
        >
        <a href="mailto:oliver@oliverlibaw.com">Email</a>
    </nav>
</header>

<script>
    document.addEventListener('scroll', () => {
        const topBar = document.querySelector('.top-bar');
        if (topBar) {
            if (window.scrollY > 10) {
                topBar.classList.add('scrolled');
            } else {
                topBar.classList.remove('scrolled');
            }
        }
    });
</script>
